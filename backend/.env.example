# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vp_app_db

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Google Cloud Vision API Configuration
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_SERVICE_ACCOUNT_PATH=./path/to/your/service-account-key.json

# Alternative: Use service account key content directly (for Railway deployment)
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration (for future email verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password